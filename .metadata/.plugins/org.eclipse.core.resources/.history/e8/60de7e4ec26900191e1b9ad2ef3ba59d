package DP1;
import java.util.*;
public class waysToStairCase {
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int[] arr = new int[n+1];
		arr[0]=0;
		arr[1]=1;
		arr[2]=2;
		for(int i=3;i<n+1;i++) {
			arr[i]=arr[i-1]+arr[i-2]+arr[i-3];
		}
		System.out.println(arr[n]);
	}
}
