import java.util.Scanner;
import java.util.*;

public class typeA {
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int N=s.nextInt();
		String str=s.next();
		int c=0;
		String ans="";
		for(int i=0;i<str.length();i+=c) {
			ans+=str.charAt(i);
			c++;
		}
		System.out.println(ans);
	}
}
