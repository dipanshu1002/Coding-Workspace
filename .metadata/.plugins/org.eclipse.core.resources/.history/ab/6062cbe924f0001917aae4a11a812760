package GlobalRound5;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.StringTokenizer;
import java.util.*;
public class typeA {
	public static void main(String[] args) {
		FastReader s = new FastReader();
		int n = s.nextInt();
		int[] arr = new int[n];
		int evp = 0;
		int evn = 0;
		int op = 0;
		int on = 0;
		for(int i=0;i<n;i++) {
			arr[i]=s.nextInt();
			if(arr[i]%2==0 && arr[i]>=0)evp++;
			if(arr[i]%2==1 && arr[i]>=0)op++;
			if(arr[i]%2==0 && arr[i]<=0)evn++;
			if(arr[i]%2==1 && arr[i]<=0)on++;
		}
		long sum = 0;
		int flag=0;
		int[] arr2 = new int[n];
		for(int i=0;i<n;i++) {
			if(arr[i]%2==0) {arr2[i]=arr[i]/2;}
			else if(arr[i]%2!=0 && flag==0) {arr2[i] = arr[i]/2+1;flag=1;}
			else if(arr[i]%2!=0 && flag==1) { arr2[i]=arr[i]/2; flag = 0; 
			}
			sum+=arr2[i];
		}
		System.out.println(sum);
		if(sum==0) {
			for(int i=0;i<n;i++) {
				System.out.println(arr2[i]);
			}
		}
	}
	static class FastReader 
	
    { 
        BufferedReader br; 
        StringTokenizer st; 
  
        public FastReader() 
        { 
            br = new BufferedReader(new
                     InputStreamReader(System.in)); 
        } 
  
        String next() 
        { 
            while (st == null || !st.hasMoreElements()) 
            { 
                try
                { 
                    st = new StringTokenizer(br.readLine()); 
                } 
                catch (IOException  e) 
                { 
                    e.printStackTrace(); 
                } 
            } 
            return st.nextToken(); 
        } 
  
        int nextInt() 
        { 
            return Integer.parseInt(next()); 
        } 
  
        long nextLong() 
        { 
            return Long.parseLong(next()); 
        } 
  
        double nextDouble() 
        { 
            return Double.parseDouble(next()); 
        } 
  
        String nextLine() 
        { 
            String str = ""; 
            try
            { 
                str = br.readLine(); 
            } 
            catch (IOException e) 
            { 
                e.printStackTrace(); 
            } 
            return str; 
        } 
    } 

	
	
}
